<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterActivity">

    <LinearLayout
        android:id="@+id/filterSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_filter_sheet"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <!--  Title  -->
        <TextView
            android:id="@+id/filterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"/>

        <!--  Divider  -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#D9D9D9"/>

        <!--  Categories  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/categoryGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                android:orientation="horizontal">

                <!--  Electronics  -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_electronics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Electronics"
                    android:textSize="16sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp"/>

                <!--  Clothing  -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_clothing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Clothing"
                    android:textSize="16sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp"/>

                <!--  Furniture  -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_furniture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Furniture"
                    android:textSize="16sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp"/>

                <!--  Kitchenware  -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_kitchenware"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Kitchenware"
                    android:textSize="16sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp"/>

                <!--  Room decor  -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_roomdecor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Room Decor"
                    android:textSize="16sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp"/>

                <!--  Books  -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_books"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Books"
                    android:textSize="16sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp"/>
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!--  Price Range slider  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Range"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"/>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/priceSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="3000"
            android:stepSize="10"
            app:values="@array/default_price_range"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"/>

        <!--  Min/max price labels  -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/minPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="14sp"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/maxPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$3000"
                android:textSize="14sp"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  Apply and reset  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="16dp"
            android:paddingHorizontal="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/resetButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Reset"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000"/>

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"/>

            <Button
                android:id="@+id/applyButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Apply"
                android:backgroundTint="#5F57C6"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>